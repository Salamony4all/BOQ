{
    "version": 2,
    "functions": {
        "api/index.js": {
            "includeFiles": "server/data/brands/**",
            "maxDuration": 300,
            "memory": 1024
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}